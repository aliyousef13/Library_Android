<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_email"
    tools:context=".EmailPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <!-- Logo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagv_Logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/firebase"
            app:civ_border_color="#55FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CyberLearn"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/imagv_Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SignContinue"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/email_edi"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:textColor="@color/gray_black"
            android:textColorHint="@color/gray2"
            android:padding="14dp"
            android:background="@drawable/bg_email_password"
            android:imeOptions="actionNext"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/pass_edi"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/gray_black"
            android:textColorHint="@color/gray2"
            android:padding="14dp"
            android:background="@drawable/bg_email_password"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@id/email_edi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Sign In -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signIn_but"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary"
            app:layout_constraintTop_toBottomOf="@id/pass_edi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="22dp" />

        <!-- Sign Up -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_but"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_outline"
            app:layout_constraintTop_toBottomOf="@id/signIn_but"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp" />

        <!-- Optional small text (no Java needed) -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firebase"
            android:textSize="12sp"
            android:textColor="#AAFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/signup_but"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>