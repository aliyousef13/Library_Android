
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_a"
    android:padding="12dp"
    android:layout_marginTop="10dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:android="http://schemas.android.com/apk/res/android"

           android:id="@+id/circle_image1"

           android:layout_width="100dp"
           android:layout_height="100dp"

           android:src="@drawable/web"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_margin="8dp"
           app:civ_border_color="@color/blue"
           app:civ_border_width="2dp"
        />



    <TextView
        android:id="@+id/os_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/circle_image1"
        android:layout_margin="8dp"

        android:text="@string/web_security"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <RatingBar
        android:id="@+id/rate1_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/os_name_tv"
        android:layout_toRightOf="@id/circle_image1"
        android:layout_marginTop="8dp"

        android:numStars="5"
        android:stepSize="0.5"
        android:rating="4"
        />


    <TextView
        android:id="@+id/price1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/rate1_bar"
        android:layout_toRightOf="@id/circle_image1"
        android:layout_marginTop="8dp"

        android:text="800 SAR"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        />



    <android.widget.Button
        android:id="@+id/but_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/price1_tv"
        android:layout_toEndOf="@id/circle_image1"

        android:layout_marginTop="12dp"
        android:text="@string/buy_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/background_library"

    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_price1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        >
    <TextView
        android:id="@+id/list_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_button"
        android:layout_below="@+id/but_price1"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:layout_marginEnd="200dp"
        android:layout_alignParentStart="true"

        />

    <android.widget.Button
        android:id="@+id/buy_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_course"
        android:layout_below="@+id/but_price1"
        android:background="@color/white"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"


        />

    </LinearLayout>




</RelativeLayout>






